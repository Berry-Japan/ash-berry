#! /bin/sh
# prerm script for ash-knoppix
#
# see: dh_installdeb(1)
case "$1" in
    remove|upgrade|deconfigure)
perl -pi -e 's|^/bin/ash\n||g;s|^/bin/ash.static\n||g;s|^/bin/bsh\n||g;' /etc/shells
        ;;
    failed-upgrade)
        ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
