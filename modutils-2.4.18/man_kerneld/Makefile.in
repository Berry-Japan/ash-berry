VPATH	= @srcdir@
srcdir	= @srcdir@
include	../Makefile.common

######################################################################

all install-bin clean dep depend install:

install-man:
	set -e; \
	for i in $(srcdir)/*.[1-8] ; do \
	  ext=`echo $$i | sed 's/.*\.//'`; \
	  $(MKDIR) $(mandir)/man$$ext/; \
	  $(INSTALL) -m 444 $$i $(mandir)/man$$ext/; \
	done

realclean: clean

distclean: realclean
	rm -f Makefile
